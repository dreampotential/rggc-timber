{% set base_class = page_header.base_class|default('c-page-header') %}

{% if page_header %}
  <div class="{{ bem_classes(base_class, page_header.element, page_header.modifiers, page_header.extra) }} u-spacing">
    {% include "@atoms/text/kicker/kicker.twig" with {
      "kicker": {
        "text": page_header.kicker.text,
        "extra": bem_classes(base_class, 'kicker')
      }
    } %}
    {% include "@atoms/text/heading/heading.twig" with {
      "heading": {
        "level": "1",
        "size": "xl",
        "type": "primary",
        "text": page_header.heading.text,
        "extra": bem_classes(base_class, 'title')
      }
    } %}
    {% include "@atoms/text/dek/dek.twig" with {
      "dek": {
        "text": page_header.dek.text,
        "extra": bem_classes(base_class, 'dek')
      }
    } %}
  </div>
{% endif %}