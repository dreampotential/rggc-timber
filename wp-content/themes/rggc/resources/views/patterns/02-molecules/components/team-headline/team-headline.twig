{% set base_class = base_class|default('c-team-headline') %}
<section class="c-team-headline">
	<div class="l-wrap l-container c-team-headline-body">
		<div class="c-team-headline-text">
			<h2>{{ team_heading }}</h2>
			<p>{{ team_description }}</p>
		</div>
		<div class="c-team-headline__columns">
			{% for item in team_card %}
				<div class="c-team-headline__column">
					{% include "views/patterns/01-atoms/images/image/figure.twig" with {
              "figure": {
                "image": {
                  "src": Image(item.image).src|resize(330, 220),
                },
              }
            } %}

					<div class="team_desc">
						<div class="team_content">
							<h2>{{item.team_title}}</h2>
							<p>{{item.team_subtitle}}</p>
						</div>
						<a href={{item.team_link}}>{{item.team_link_text}}<span class="o-icon o-icon--small" aria-label="Arrow">
								<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 18 13.61">
									<path d="M0,7.94H14.17L10.59,12,12,13.61,18,6.8,12,0,10.59,1.6l3.58,4.07H0Z"></path>
								</svg>
							</span>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
