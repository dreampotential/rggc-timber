{% extends "@templates/_layout.twig" %}

{% block content %}
	{% include "@molecules/components/hero/hero.twig"%}
	{% include ['@organisms/content/content-page-' ~ post.post_type|replace({'_': '-'}) ~ '.twig', '@organisms/content/content-page.twig'] %}
	{% for section in blocks %}
		{% if section.blockName == 'acf/latest' %}
			{% include "@molecules/components/latest/latest.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/promo-section' %}
			{% include "@molecules/components/promo-section/promo-section.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/testimonial' %}
			{% include "@molecules/components/testimonial/testimonial2.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/columns' %}
			{% include "@molecules/components/columns/columns.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/split-media-content' %}
			{% include "@molecules/components/split-media-content/split-media-content.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/team-headline' %}
			{% include "@molecules/components/team-headline/team-headline.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/full-width-media' %}
			{% include "@molecules/components/full-width-media/full-width-media.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/image-gallery' %}
			{% include "@molecules/components/image-gallery/image-gallery.twig" %}
		{% endif %}
		{% if section.blockName == 'acf/project-filter' %}
			{% include "@molecules/components/project-filter/project-filter.twig" %}
		{% endif %}
	{% endfor %}
{% endblock %}
